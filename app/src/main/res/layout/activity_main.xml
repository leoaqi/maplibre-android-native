<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:maplibre_cameraTargetLat="40.7135"
        app:maplibre_cameraTargetLng="-74.0066"
        app:maplibre_cameraTilt="45"
        app:maplibre_cameraZoom="15" />
    <com.google.android.flexbox.FlexboxLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:flexWrap="wrap"
        app:justifyContent="center"
        android:padding="10dp"
        android:layout_gravity="bottom"
        >
        <Button
            android:id="@+id/btnLine"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:text="Line"/>
        <Button
            android:id="@+id/btnFill"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:text="Fill"/>
        <Button
            android:id="@+id/btnPark"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:text="Park"/>
        <Button
            android:id="@+id/btnRailway"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:text="Railway"/>
        <Button
            android:id="@+id/btnLandmark"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:text="Landmark"/>
        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:text="Emergency Route"/>
    </com.google.android.flexbox.FlexboxLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>